generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Unit {
  id            String          @id @default(cuid())
  name          String
  type          String
  address       String?
  phone         String?
  adminName     String?
  doctors       Doctor[]
  receptionists Receptionist[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model Specialty {
  id        String              @id @default(cuid())
  name      String              @unique
  doctors   Doctor[]
  templates SpecialtyTemplate[]
  createdAt DateTime            @default(now())
  updatedAt DateTime            @updatedAt
}

model Doctor {
  id              String      @id @default(cuid())
  name            String
  unitId          String
  specialtyId     String?
  phone           String?
  licenseNumber   String?
  canEditPatients Boolean     @default(true)
  canManageVisits Boolean     @default(true)
  unit            Unit        @relation(fields: [unitId], references: [id])
  specialty       Specialty?  @relation(fields: [specialtyId], references: [id])
  patients        Patient[]
  appointments    Appointment[]
  visits          VisitEntry[]
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model Receptionist {
  id        String   @id @default(cuid())
  name      String
  address   String
  phone     String
  unitId    String
  unit      Unit     @relation(fields: [unitId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Patient {
  id           String        @id @default(cuid())
  doctorId     String
  name         String
  phone        String?
  address      String?
  historyDate  String?
  doctor       Doctor        @relation(fields: [doctorId], references: [id])
  appointments Appointment[]
  visits       VisitEntry[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Appointment {
  id        String   @id @default(cuid())
  doctorId  String
  patientId String
  title     String
  start     DateTime
  end       DateTime
  doctor    Doctor   @relation(fields: [doctorId], references: [id])
  patient   Patient  @relation(fields: [patientId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SpecialtyTemplate {
  id          String           @id @default(cuid())
  specialtyId String
  specialty   Specialty        @relation(fields: [specialtyId], references: [id])
  fields      SpecialtyField[]
  visits      VisitEntry[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

model SpecialtyField {
  id         String            @id @default(cuid())
  templateId String
  label      String
  type       String
  required   Boolean           @default(false)
  template   SpecialtyTemplate @relation(fields: [templateId], references: [id])
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt
}

model VisitEntry {
  id         String            @id @default(cuid())
  doctorId   String
  patientId  String
  templateId String
  date       DateTime
  responses  Json
  doctor     Doctor            @relation(fields: [doctorId], references: [id])
  patient    Patient           @relation(fields: [patientId], references: [id])
  template   SpecialtyTemplate @relation(fields: [templateId], references: [id])
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      String
  doctorId  String?
  unitId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
